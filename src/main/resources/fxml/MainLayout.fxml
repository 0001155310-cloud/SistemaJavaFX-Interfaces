<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="root" prefHeight="431.0" prefWidth="607.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.senai.sistemajavafx.Controller.MainController">
    <top>
        <MenuBar style="-fx-background-color: linear-gradient(to left, rgba(11, 28, 45, 0.85), white);" styleClass="menu-top" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Home">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#abrirLogin" text="Login" />
                        <MenuItem mnemonicParsing="false" onAction="#abrirHome" text="Tela inicial" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Cadastro">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#abrirClientes" text="Cadastrar Cliente" />
                        <MenuItem mnemonicParsing="false" onAction="#abrirProdutos" text="Cadastrar Produto" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Vendas">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#abrirNovaVenda" text="Nova Venda" />
                        <MenuItem mnemonicParsing="false" onAction="#abrirRelatorio" text="Relatório de Vendas" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ajuda">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#abrirAjuda" text="Sobre o sistema" />
                    </items>
                </Menu>
            </menus>
            <effect>
                <DropShadow blurType="GAUSSIAN" height="7.125" radius="4.78125" width="14.0" />
            </effect>
        </MenuBar>
    </top>
    <center>
    </center>
   <center>
      <Label prefHeight="99.0" prefWidth="231.0" text="Parece que você não selecionou nada! Selecione uma das opções no menu acima!" textAlignment="CENTER" wrapText="true" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
